<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiao.dao.SetmealDao" >
    <!--新增-->
    <insert id="add" parameterType="com.xiao.pojo.Setmeal">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal
        (code,name,sex,age,helpCode,price,remark,attention,img)
        values
        (#{code},#{name},#{sex},#{age},#{helpCode},#{price},#{remark},#{attention},#{img})
    </insert>
    <!--绑定套餐和检查组多对多关系-->
    <insert id="setSetmealAndCheckGroup" parameterType="map">
        insert into t_setmeal_checkgroup
      		(setmeal_id,checkgroup_id)
      			values
      		(#{setmeal_id},#{checkgroup_id})
    </insert>

    <!--根据条件查询-->
    <select id="selectByCondition" parameterType="string" resultType="com.xiao.pojo.Setmeal">
        select * from t_setmeal
        <if test="value != null and value.length > 0">
            where code like "%"#{value}"%" or name like "%"#{value}"%" or helpCode like "%"#{value}"%"
        </if>
    </select>

    <select id="findById" parameterType="int" resultType="com.xiao.pojo.Setmeal">
        select * from t_setmeal where id = #{id}
    </select>

    <select id="findCheckGroupIdsBySetmealId" parameterType="int" resultType="int">
        select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{id}
    </select>

    <!--根据套餐id删除中间表数据（清理原有关联关系）-->
    <delete id="deleteAssociation" parameterType="int">
        delete from t_setmeal_checkgroup where setmeal_id = #{id}
    </delete>
    <!--编辑-->
    <update id="edit" parameterType="com.xiao.pojo.Setmeal">
        update t_setmeal
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="img != null">
                img = #{img}
            </if>
        </set>
        where id = #{id}
    </update>

    <!--删除-->
    <delete id="deleteById" parameterType="int">
        delete from t_setmeal where id = #{id}
    </delete>

</mapper>